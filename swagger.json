{
  "swagger": "2.0",
  "info": {
    "description": "This is a simple API microservice for authentication, JSON patching and thumbnail generation",
    "version": "1.0.0",
    "title": "hackerbay-interview-backend-task",
    "termsOfService": "",
    "contact": {
      "email": "polymathwole@gmail.com"
    },
    "license": {
      "name": "",
      "url": "http://"
    }
  },
  "host": "localhost:8080/api",
  "basePath": "/v1",
  "tags": [
    {
      "name": "user",
      "description": "Operations about user",
      "externalDocs": {
        "description": "",
        "url": "http://"
      }
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/user/login": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": null,
        "description": "Logs user into the system",
        "operationId": "login",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "username",
            "in": "formData",
            "description": "The user name for login",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "The password for login",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/LoginSuccessApiResponse"
            }
          },
          "400": {
            "description": "Invalid username/password supplied",
            "schema": {
              "$ref": "#/definitions/LoginFailureApiResponse"
            }
          }
        }
      }
    },
    "/user/patchjson": {
      "patch": {
        "tags": [
          "user, JSON, PATCH"
        ],
        "summary": null,
        "description": "Takes a JSON object and JSON patch object and returns an updated JSON object to the user",
        "operationId": "patchjson",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "jsontopatch",
            "in": "formData",
            "description": "The JSON object to be patched",
            "required": true,
            "type": "string"
          },
          {
            "name": "jsonpatch",
            "in": "formData",
            "description": "The JSON patch object",
            "required": true,
            "type": "string"
          },
          {
            "name": "x-access-token",
            "in": "header",
            "description": "The authorization header for this request",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/NewDocument"
            }
          },
          "400": {
            "description": "Invalid JSON object and/or JSON patch object",
            "schema": {
              "$ref": "#/definitions/PatchFailureApiResponse"
            }
          },
          "401": {
            "description": "Unauthorized access",
            "schema": {
              "$ref": "#/definitions/LoginFailureApiResponse"
            }
          }
        }
      }
    },
    "/user/generatethumbnail": {
      "post": {
        "tags": [
          "user, image, thumbnail, resize"
        ],
        "summary": null,
        "description": "Takes an image URL and the desired image format for the thumbnail that will be generated",
        "operationId": "resize",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "image/**"
        ],
        "parameters": [
          {
            "name": "url",
            "in": "formData",
            "description": "The URL of the image",
            "required": true,
            "type": "string"
          },
          {
            "name": "format",
            "in": "formData",
            "description": "The desired image format",
            "required": true,
            "type": "string"
          },
          {
            "name": "x-access-token",
            "in": "header",
            "description": "The authorization header for this request",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": "image/**",
            "schema": {
              "$ref": "#/definitions/Image"
            }
          },
          "400": {
            "description": "Invalid image URL or format provided",
            "schema": {
              "$ref": "#/definitions/PatchFailureApiResponse"
            }
          },
          "401": {
            "description": "Unauthorized access",
            "schema": {
              "$ref": "#/definitions/LoginFailureApiResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Image": {
      "type": "string",
      "format": "binary"
    },
    "LoginSuccessApiResponse": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "token": {
          "type": "string"
        }
      },
      "xml": {
        "name": "LoginSuccessApiResponse"
      }
    },
    "LoginFailureApiResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      },
      "xml": {
        "name": "LoginFailureApiResponse"
      }
    },
    "NewDocument": {
      "type": "object",
      "xml": {
        "name": "NewDocument"
      }
    },
    "PatchFailureApiResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        }
      },
      "xml": {
        "name": "PatchFailureApiResponse"
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}